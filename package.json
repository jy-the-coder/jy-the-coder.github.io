{
  "name": "restaurant-bi",
  "version": "1.0.0",
  "description": "Restaurant Business Intelligence Platform",
  "main": "web_app/app.js",
  "scripts": {
    "dev": "./start_platform.sh",
    "start": "cd web_app && python3 -m http.server 8000",
    "start-win": "cd web_app && python -m http.server 8000",
    "build": "node scripts/build-for-deploy.js",
    "deploy": "npm run build && git add docs/ && git commit -m 'Deploy to GitHub Pages' && git push",
    "serve-local": "cd web_app && python3 -m http.server 8000",
    "serve-docs": "cd docs && python3 -m http.server 8001",
    "test-local": "echo 'Testing local server...' && cd web_app && timeout 3 python3 -m http.server 8000 || echo 'Server test completed'",
    "check-data": "find web_app/data -name '*.json' | wc -l"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jy-the-coder/restaurant-bi.git"
  },
  "keywords": [
    "restaurant",
    "business-intelligence",
    "data-visualization",
    "yelp-analysis"
  ],
  "author": "jy-the-coder",
  "license": "MIT",
  "homepage": "https://jy-the-coder.github.io/restaurant-bi",
  "devDependencies": {
    "fs-extra": "^11.1.1"
  }
}